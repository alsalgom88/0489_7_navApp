<?xml version="1.0" encoding="utf-8"?>

<!--
    Layout principal de la MainActivity de la NavApp.
    Es fa servir CoordinatorLayout perquÃ¨ permet coordinar:
    - la Toolbar dins de AppBarLayout
    - el contingut amb comportaments de Material Design
-->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- ========================================================= -->
    <!-- 1) APPBARLAYOUT + TOOLBAR (barra superior)                 -->
    <!-- ========================================================= -->

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.Toolbar">

        <!--
            Toolbar moderna que substitueix lâ€™ActionBar.
            - Sâ€™integra amb Navigation Component
            - Gestiona tÃ­tols i icones
            - Accepta menÃºs (overflow)
        -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </com.google.android.material.appbar.AppBarLayout>



    <!-- ========================================================= -->
    <!-- 2) COS PRINCIPAL DE LA PANTALLA (ConstraintLayout)         -->
    <!-- ========================================================= -->

    <!--
        Aquest ConstraintLayout contÃ© quatre botons centrats
        que obren cadascun un sistema de navegaciÃ³ diferent:
        - Drawer Navigation
        - Bottom Navigation
        - Options Menu Navigation
        - Tabbed Navigation (ViewPager2 + Tabs)
    -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_large">


        <!-- ðŸŸ¦ BOTÃ“ 1 â€” Drawer Navigation -->
        <Button
            android:id="@+id/action_goto_drawerActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_go_drawer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/action_goto_bottomActivity" />


        <!-- ðŸŸ© BOTÃ“ 2 â€” Bottom Navigation -->
        <Button
            android:id="@+id/action_goto_bottomActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_go_bottom"
            app:layout_constraintTop_toBottomOf="@id/action_goto_drawerActivity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/action_goto_optionsActivity" />


        <!-- ðŸŸ§ BOTÃ“ 3 â€” Options Menu Navigation -->
        <Button
            android:id="@+id/action_goto_optionsActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_go_options"
            app:layout_constraintTop_toBottomOf="@id/action_goto_bottomActivity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/action_goto_tabbedActivity" />


        <!-- ðŸŸª BOTÃ“ 4 â€” Tabbed Navigation -->
        <Button
            android:id="@+id/action_goto_tabbedActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_go_tabs"
            app:layout_constraintTop_toBottomOf="@id/action_goto_optionsActivity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
